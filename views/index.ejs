<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <h2>My Blog Posts</h2>

    <ul>
    <% posts.forEach(function(post) { %>
      <li><a href="/posts/<%= post._id %>"><%= post.title %></a></li>
    <% }); %>
    </ul>
  </body>
</html>
